<div class="show-article d-flex flex-column align-items-center mt-4">
  <h1><%= @article.title %></h1>
  <p><%= @article.body %></p>

  <ul class="d-flex mt-4">
   <li class="me-3"><%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary" %></li>
   <li class="ms-3"><%= link_to "Destroy", article_path(@article), class: "btn btn-danger",
                            method: :delete,
                            data: { confirm: "Are you sure? "} 
      %>
    </li>
  </ul>
  <div class="comments mt-4 d-flex flex-column align-items-start">
    <h2 class="align-self-center">Comments</h2>
    <div class="d-flex flex-column">
       <%= render @article.comments %>
    </div>
     
    <div class="d-flex flex-column mx-auto align-items-center mt-4">
       <h3>Add a comment:</h3>
       <%= render "comments/form" %>
    </div>
  </div>
</div>
